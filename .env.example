# General Configuration
SERVER_HOSTNAME=localhost
PROJECT_NAME=Parascope
DEBUG=true

# Frontend Configuration
FRONTEND_PORT=3000
# Optional: Override API URL if different from http://${SERVER_HOSTNAME}:${BACKEND_PORT}
# VITE_API_BASE_URL=http://localhost:8000

# Backend Configuration
BACKEND_PORT=8000
# Optional: Override CORS origins if different from http://${SERVER_HOSTNAME}:${FRONTEND_PORT},http://localhost:5173
# BACKEND_CORS_ORIGINS=http://localhost:5173,http://localhost:3000
DATABASE_URL=postgresql+asyncpg://user:password@localhost:5432/parascope
UPLOAD_DIR=uploads
LOCK_TIMEOUT_SECONDS=604800
WORKER_COUNT=5

# Login Configuration
USERNAME_REGEX=^[a-zA-Z0-9_ ]+$
USERNAME_DESCRIPTION=Username must contain only letters, numbers, spaces, and underscores.

# Execution Environment
# Comma-separated list of extra allowed modules for RestrictedPython (System modules like math, numpy, networkx are already included)
EXTRA_ALLOWED_MODULES=scipy
# Comma-separated list of extra modules to preload in worker processes
EXTRA_PRELOAD_MODULES=

# AI Providers
DEFAULT_AI_PROVIDER=gemini # gemini, openai, bedrock

# Google Gemini
GEMINI_API_KEY=your_gemini_api_key
GEMINI_MODEL=gemini-3-flash-preview

# OpenAI
OPENAI_API_KEY=your_openai_api_key
OPENAI_MODEL=o4-mini

# Amazon Bedrock
AWS_ACCESS_KEY_ID=your_aws_access_key
AWS_SECRET_ACCESS_KEY=your_aws_secret_key
# AWS_PROFILE=your_aws_profile
# AWS_CONTAINER_CREDENTIALS_RELATIVE_URI=
AWS_REGION=us-east-1
BEDROCK_MODEL_ID=anthropic.claude-3-5-haiku-20241022-v1:0
ANTHROPIC_VERSION=bedrock-2023-05-31
